{
  "name": "shortlist-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/shortlist-backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/shortlist-backend",
        "main": "apps/shortlist-backend/src/index.ts",
        "tsConfig": "apps/shortlist-backend/tsconfig.json",
        "assets": ["apps/shortlist-backend/Dockerfile"],
        "platform": "node",
        "bundle": true,
        "format": ["cjs"],
        "esbuildOptions": {
          "external": [
            "express", "cors", "dotenv", "bcryptjs", "jsonwebtoken", "pg", "typeorm", "reflect-metadata", "multer"
          ]
        },
        "generatePackageJson": true
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "shortlist-backend:build",
        "watch": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/shortlist-backend/**/*.ts"]
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t shortlist-backend:latest -f apps/shortlist-backend/Dockerfile ."
      }
    }
  },
  "tags": []
}
