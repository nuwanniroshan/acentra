{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/apps/acentra-backend",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "lib": ["ES2021"],
    "strict": false,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "types": ["node", "@types/express"],
    "paths": {
      "@/*": ["./src/*"],
      "@acentra/shared-types": ["../../libs/shared-types/src/index.ts"],
      "@acentra/auth-utils": ["../../libs/auth-utils/src/index.ts"],
      "@acentra/aurora-design-system": ["../../libs/aurora-design-system/src/index.ts"],
      "@acentra/file-storage": ["../../libs/file-storage/src/index.ts"],
      "@acentra/logger": ["../../libs/logger/src/index.ts"],
      "@acentra/email-service": ["../../libs/email-service/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "scripts"]
}
